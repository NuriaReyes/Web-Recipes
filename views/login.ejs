<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Mi Recetario web</title>

    <link href="/Bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- <link href="/Bootstrap/css/custom.css" rel="stylesheet"> -->

  </head>
  <body>


    <div class="container col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-body">

          <br><br><center><h1 class="primary">Recetario Web</h1></center><br>

          <div class="container col-md-offset-3 col-md-6" id="fill">
            <form class="form-horizontal" name="login", method="post", action="/login">
              <fieldset>
                <center><legend>Datos de usuario</legend></center>
                <div class="form-group">
                  <label for="inputEmail" class="col-md-2 control-label">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                  </label>
                  <div class="col-md-9">
                    <input type="text" class="form-control" id="inputEmail" placeholder="Usuario" name="username">
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword" class="col-md-2 control-label">
                    <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                  </label>
                  <div class="col-md-9">
                    <input type="password" class="form-control" id="inputPassword" placeholder="ContraseÃ±a" name="password">
                  </div>
                </div><br>
                <div class="form-group">
                  <div class="col-md-2 col-md-offset-2">
                    <button type="submit" class="btn btn-default" id="btn">Ingresar</button>
                  </div>
                  <div class="col-md-2 col-md-offset-2">
                    <a href="/signup" class="btn btn-primary" id="btnR">Registrarse</a>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>

          <div class="container col-md-4">
          </div>
          <div class="container col-md-12">
            <br><br>
          </div>

          <% if (typeof error !== 'undefined') { %>
            <div class="col-md-offset-3 col-md-6">
                <div class="alert alert-dismissible alert-warning">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                      <%= error %>
                    </strong>
                </div>
            </div>
          <% } %>

          <% if (typeof success !== 'undefined') { %>
            <div class="col-md-offset-3 col-md-6">
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                      <%= success %>
                    </strong>
                </div>
            </div>
          <% } %>

        </div>
      </div>
    </div>




    <script src="/Bootstrap/js/jquery.min.js"></script>
    <script src="/Bootstrap/js/bootstrap.min.js"></script>
  </body>
</html>
